<Window x:Class="cmako.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cmako"
        mc:Ignorable="d"
        Title="Система компетентностного анализа" WindowState="Maximized" Closing="Window_Closing">
    <Grid>
        <Menu Height="30" VerticalAlignment="Top" FontSize="16">
            <MenuItem Header="Работа с учебным планом" Click="MenuItemSyllabus_Click"></MenuItem>
            <MenuItem Header="MOODLE" Click="MenuItemMoodle_Click"></MenuItem>
        </Menu>
        <Label Name="User_label" HorizontalAlignment="Right" Height="30" FontSize="16" VerticalAlignment="Top"/>
        <Frame x:Name="Main" Margin="0,30,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
